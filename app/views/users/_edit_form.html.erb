<%= form_for @user.handle do |f| %>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Confirmation:" %>
  <%= f.password_field :password_confirmation %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit "Submit", class: "submit" %>
<% end %>