<h1>Posts</h1>
<ol>
	<% @posts.each do |post| %>
	<li>
		<%= link_to(post.title, post.url, target: "_blank") %>
		<span class="site">(<%= post.url.split('/')[2] %>)</span>
		<br>

		<span>submitted <%= time_ago_in_words(post.created_at) %> ago</span><br>

		<%= link_to(pluralize(post.comments.count, 'comment'), post) %>
	</li>
	<% end %>
</ol>